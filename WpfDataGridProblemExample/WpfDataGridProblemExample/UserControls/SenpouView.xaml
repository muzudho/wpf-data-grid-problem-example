<UserControl x:Name="thisUserControl"
             x:Class="WpfDataGridProblemExample.UserControls.SenpouView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfDataGridProblemExample.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <RadioButton Content="未選択" IsChecked="{Binding Senpou.IsNotSelected, ElementName=thisUserControl}"/>
        <RadioButton Content="居飛車党" IsChecked="{Binding Senpou.IsIbisha, ElementName=thisUserControl}"/>
        <RadioButton Content="振り飛車党"  IsChecked="{Binding Senpou.IsFuribisha, ElementName=thisUserControl}"/>
        <RadioButton Content="オールラウンダー" IsChecked="{Binding Senpou.IsAllRounder, ElementName=thisUserControl}"/>
    </StackPanel>
</UserControl>
